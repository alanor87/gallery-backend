    "/transactions": {
      "get": {
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "summary": "Get list of current month transactions",
        "tags": [
          "Transactions"
        ],
        "parameters": [
          {
            "in": "query",
            "name": "month",
            "schema": {
              "type": "string"
            },
            "description": "The month for search (default value = current month)"
          },
          {
            "in": "query",
            "name": "year",
            "schema": {
              "type": "string"
            },
            "description": "The year for search (default value = current year)"
          },
          {
            "in": "query",
            "name": "page",
            "schema": {
              "type": "integer"
            },
            "description": "The number of page for return results (default value = 1)"
          },
          {
            "in": "query",
            "name": "limit",
            "schema": {
              "type": "integer"
            },
            "description": "The numbers of items to return on page (default value = 5000)"
          },
          {
            "in": "query",
            "name": "sortOrder",
            "schema": {
              "type": "integer",
              "enum": [
                -1,
                1
              ]
            },
            "description": "Order of sorting items default value = -1 (descending sort )"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "succes"
                    },
                    "code": {
                      "type": "number",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Transactions have found"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "docs": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "_id": {
                                "type": "string",
                                "description": "Generated by Data Base ObjectId"
                              },
                              "timeStamp": {
                                "type": "number",
                                "description": "Time stamp in ms"
                              },
                              "date": {
                                "type": "string",
                                "description": "Date in format DD/MM/20YY"
                              },
                              "month": {
                                "type": "string",
                                "description": "Autogenerate from Date"
                              },
                              "year": {
                                "type": "string",
                                "description": "Autogenerate from Date"
                              },
                              "type": {
                                "type": "string",
                                "description": "Enum {\"+\" or \"-\"}"
                              },
                              "category": {
                                "type": "object",
                                "properties": {
                                  "_id": {
                                    "type": "string"
                                  },
                                  "name": {
                                    "type": "string",
                                    "example": "Продукты"
                                  },
                                  "type": {
                                    "type": "string",
                                    "example": "-"
                                  }
                                }
                              },
                              "comment": {
                                "type": "string"
                              },
                              "sum": {
                                "type": "number",
                                "description": "Number >=0"
                              },
                              "owner": {
                                "type": "string",
                                "description": "User Id"
                              },
                              "monthlyBalance": {
                                "type": "number",
                                "description": "Calculated by server Monthly balance at time of transaction"
                              }
                            }
                          }
                        },
                        "totalDocs": {
                          "type": "number"
                        },
                        "limit": {
                          "type": "number"
                        },
                        "totalPages": {
                          "type": "number"
                        },
                        "page": {
                          "type": "number"
                        },
                        "pagingCounter": {
                          "type": "number"
                        },
                        "hasPrevPage": {
                          "type": "boolean"
                        },
                        "hasNextPage": {
                          "type": "boolean"
                        },
                        "prevPage": {
                          "type": "number"
                        },
                        "nextPage": {
                          "type": "number"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized (invalid token)",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "error"
                    },
                    "code": {
                      "type": "number",
                      "example": 401
                    },
                    "message": {
                      "type": "string",
                      "example": "Unauthorized"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    }
  }
