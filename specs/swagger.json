{
  "openapi": "3.0.0",
  "info": {
    "title": "Wallet API",
    "description": "API for Wallet application that save your expencies and make dashbord with statistics",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3001/api"
    },
    {
      "url": "https://wallet-goit.herokuapp.com/api"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "User": {
        "properties": {
          "_id": {
            "type": "string",
            "description": "Generated by Data Base ObjectId"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "totalBalance": {
            "type": "number",
            "description": "Calculated by Server"
          }
        },
        "required": [
          "name",
          "email",
          "password"
        ]
      },
      "Transaction": {
        "properties": {
          "_id": {
            "type": "string",
            "description": "Generated by Data Base ObjectId"
          },
          "timeStamp": {
            "type": "number",
            "description": "Unix timestamp in ms"
          },
          "date": {
            "type": "string",
            "description": "Date in format DD/MM/20YY"
          },
          "month": {
            "type": "string",
            "description": "Autogenerate from Date"
          },
          "year": {
            "type": "string",
            "description": "Autogenerate from Date"
          },
          "type": {
            "type": "string",
            "description": "Enum {\"+\" or \"-\"}"
          },
          "category": {
            "type": "string",
            "description": "Category Id"
          },
          "comment": {
            "type": "string"
          },
          "sum": {
            "type": "number",
            "description": "Number >=0"
          },
          "owner": {
            "type": "string",
            "description": "User Id"
          },
          "monthlyBalance": {
            "type": "number",
            "description": "Calculated by server Monthly balance at time of transaction"
          }
        },
        "required": [
          "timeStamp",
          "type",
          "category",
          "sum"
        ]
      },
      "Category": {
        "properties": {
          "_id": {
            "type": "string",
            "description": "Generated by Data Base ObjectId"
          },
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "description": "Enum {\"+\" or \"-\"}"
          },
          "color": {
            "type": "string",
            "description": "Hex color"
          }
        },
        "required": [
          "name",
          "type",
          "color"
        ]
      }
    }
  },
  "tags": [
    {
      "name": "Users"
    },
    {
      "name": "Transactions"
    },
    {
      "name": "Categories"
    }
  ],
  "paths": {
    "/users/signup": {
      "post": {
        "summary": "Create new user",
        "tags": [
          "Users"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Andriy"
                  },
                  "email": {
                    "type": "string",
                    "example": "andriy@gmail.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "password"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "succes"
                    },
                    "code": {
                      "type": "number",
                      "example": 201
                    },
                    "message": {
                      "type": "string",
                      "example": "Registaration successful"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "email": {
                          "type": "string",
                          "example": "andriy@gmail.com"
                        },
                        "name": {
                          "type": "string",
                          "example": "Andriy"
                        },
                        "token": {
                          "type": "string",
                          "example": "token"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "error"
                    },
                    "code": {
                      "type": "number",
                      "example": 400
                    },
                    "message": {
                      "type": "string",
                      "example": "some property is required"
                    },
                    "data": {
                      "type": "string",
                      "example": "Bad request"
                    }
                  }
                }
              }
            }
          },
          "409": {
            "description": "Conflict",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "error"
                    },
                    "code": {
                      "type": "number",
                      "example": 409
                    },
                    "message": {
                      "type": "string",
                      "example": "Email is already in use"
                    }
                  }
                }
              }
            }
          },
          "429": {
            "description": "Too many requests",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "error"
                    },
                    "code": {
                      "type": "number",
                      "example": 429
                    },
                    "message": {
                      "type": "string",
                      "example": "Too many accounts created from this IP, please try again after an hour"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
