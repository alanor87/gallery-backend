{
  "openapi": "3.0.0",
  "info": {
    "title": "Gallery API",
    "description": "API for Gallery project. Root for the API is /api/v1/ .",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3030/api/v1/docs"
    },
    {
      "url": "https://gallery-app-mj.herokuapp.com/"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "User": {
        "properties": {
          "_id": {
            "type": "string",
            "description": "Generated by Data Base ObjectId"
          },
          "userName": {
            "type": "string"
          },
          "userEmail": {
            "type": "string"
          },
          "userPassword": {
            "type": "string",
            "description": "Stored in encrypted form"
          },
          "userToken": {
            "type": "string"
          },
          "userOwnedImages": {
            "type": "array[Schema.Types.ObjectId]",
            "description": "Images user has full control of. Holds array ObjectId type, can be populated from Images collection."
          },
          "userOpenedToImages": {
            "type": "array[Schema.Types.ObjectId]",
            "description": "Images user has view and like access to. Holds array ObjectId type, can be populated from Images collection."
          },
          "userInterface": {
            "properties": {
              "backgroundImage": {
                "type": "String",
                "default": "https://cdn.pixabay.com/photo/2015/12/01/20/28/road-1072821_960_720.jpg"
              },
              "lightThemeIsOn": {
                "type": "Boolean",
                "default": false
              },
              "imagesPerPage": {
                "type": "Number",
                "default": 10
              },
              "sidePanelIsOpen": {
                "type": "Boolean",
                "default": false
              }
            }
          }
        },
        "required": [
          "userName",
          "userEmail",
          "userPassword"
        ]
      },
      "Image": {
        "properties": {
          "_id": {
            "type": "string",
            "description": "Generated by Data Base ObjectId"
          },
          "imageURL": {
            "type": "string"
          },
          "imageHostingId": {
            "type": "string"
          },
          "smallImageURL": {
            "type": "string"
          },
          "imageInfo": {
            "properties": {
              "tags": {
                "type": "array[string]"
              },
              "likes": {
                "type": "array[string]"
              },
              "belongsTo": {
                "type": "string",
                "description": "ID of user who owns the image."
              },
              "isPublic": {
                "type": "boolean",
                "default": false,
                "description": "If true, image is accessible for both authorized and unauthorized users."
              },
              "openedTo": {
                "type": "array[string]",
                "description": "IDs of users who have like and view access to the image, e.g whom this image was shared with by owner."
              }
            },
            "required": [
              "belongsTo"
            ]
          }
        },
        "required": [
          "imageURL"
        ]
      },
      "Interface": {
        "properties": {
          "backgroundImage": {
            "type": "string"
          },
          "lightThemeIsOn": {
            "type": "boolean"
          },
          "imagesPerPage": {
            "type": "number"
          },
          "sidePanelIsOpen": {
            "type": "boolean"
          }
        }
      },
      "PublicSettings": {
        "properties": {
          "publicImagesList": {
            "type": "array[Schema.Types.ObjectId]",
            "description": "Holds ObjectId string references to all the images that have isPublic property set to true. Can be populated from Images collection."
          }
        }
      }
    }
  },
  "paths": {
    "/auth/register": {
      "post": {
        "summary": "New user registration.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "userName": {
                    "type": "string",
                    "example": "John Doe"
                  },
                  "userEmail": {
                    "type": "string",
                    "example": "JohnDoe@mail.com"
                  },
                  "userPassword": {
                    "type": "string",
                    "example": "123456",
                    "description": "Minimum 6 symbols"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User was created.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "succes"
                    },
                    "code": {
                      "type": "number",
                      "example": 201
                    },
                    "message": {
                      "type": "string",
                      "example": "User was created."
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "_id": {
                          "type": "string",
                          "example": "61cc6394b7ea97d15e1cGTdc"
                        },
                        "userName": {
                          "type": "string",
                          "example": "John Doe"
                        },
                        "userEmail": {
                          "type": "string",
                          "example": "JohnDoe@mail.com"
                        },
                        "userOwnedImages": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          },
                          "description": "Empty after registretion"
                        },
                        "userOpenedToImages": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          },
                          "description": "Empty after registretion"
                        },
                        "userToken": {
                          "type": "string",
                          "description": "eyJhbGciOiNiIsInR5cCI6IkpXVCJ9.eyJfaWQiOiI2MWNjNjM5NGI3ZWE5xYzYwZGMiLCJp2NDA3ODQ3ODh9.xm8nF4ptw3M4F5Cy1PYklK0jd-PcAPCKx3a-AmEn"
                        },
                        "userInterface": {
                          "type": "object",
                          "description": "User interface object, refer to schemas for details."
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "409": {
            "description": "Conflict",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "error"
                    },
                    "code": {
                      "type": "number",
                      "example": 409
                    },
                    "message": {
                      "type": "string",
                      "example": "User with this email or name already exists."
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server error"
          }
        },
        "tags": [
          "Auth"
        ]
      }
    },
    "/auth/login": {
      "post": {
        "summary": "User login.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "userEmail": {
                    "type": "string",
                    "example": "johnDoe@mail.com"
                  },
                  "userPassword": {
                    "type": "string",
                    "example": "123456"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "Success."
                    },
                    "code": {
                      "type": "number",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "User is logged in."
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "_id": {
                          "type": "string",
                          "example": "61cc6394b7ea97d15e1cGTdc"
                        },
                        "userName": {
                          "type": "string",
                          "example": "John Doe"
                        },
                        "userEmail": {
                          "type": "string",
                          "example": "JohnDoe@mail.com"
                        },
                        "userOwnedImages": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          }
                        },
                        "userOpenedToImages": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          }
                        },
                        "userToken": {
                          "type": "string",
                          "description": "eyJhbGciOiNiIsInR5cCI6IkpXVCJ9.eyJfaWQiOiI2MWNjNjM5NGI3ZWE5xYzYwZGMiLCJp2NDA3ODQ3ODh9.xm8nF4ptw3M4F5Cy1PYklK0jd-PcAPCKx3a-AmEn"
                        },
                        "userInterface": {
                          "type": "object",
                          "description": "User interface object, refer to schemas for details."
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "403": {
            "description": "Forbidden.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "Forbidden."
                    },
                    "code": {
                      "type": "number",
                      "example": 403
                    },
                    "message": {
                      "type": "string",
                      "example": "Invalid email or password."
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server error"
          }
        },
        "tags": [
          "Auth"
        ]
      }
    },
    "/users/logout": {
      "get": {
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "summary": "User logout.",
        "responses": {
          "200": {
            "description": "No content (in case of successful logout)",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "Success"
                    },
                    "code": {
                      "type": "number",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Logout success."
                    }
                  }
                }
              }
            }
          }
        },
        "tags": [
          "Users"
        ]
      }
    },
    "/users/getUserByToken": {
      "get": {
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "summary": "Getting user info basing on a valid JWT token from request",
        "tags": [
          "Users"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "Logged in."
                    },
                    "code": {
                      "type": "number",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "User is logged in."
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "user": {
                          "type": "object",
                          "properties": {
                            "status": {
                              "type": "string",
                              "example": "Success."
                            },
                            "code": {
                              "type": "number",
                              "example": 200
                            },
                            "message": {
                              "type": "string",
                              "example": "User is logged in."
                            },
                            "data": {
                              "type": "object",
                              "properties": {
                                "_id": {
                                  "type": "string",
                                  "example": "61cc6394b7ea97d15e1cGTdc"
                                },
                                "userName": {
                                  "type": "string",
                                  "example": "John Doe"
                                },
                                "userEmail": {
                                  "type": "string",
                                  "example": "JohnDoe@mail.com"
                                },
                                "userOwnedImages": {
                                  "type": "array",
                                  "items": {
                                    "type": "string"
                                  }
                                },
                                "userOpenedToImages": {
                                  "type": "array",
                                  "items": {
                                    "type": "string"
                                  }
                                },
                                "userToken": {
                                  "type": "string",
                                  "description": "eyJhbGciOiNiIsInR5cCI6IkpXVCJ9.eyJfaWQiOiI2MWNjNjM5NGI3ZWE5xYzYwZGMiLCJp2NDA3ODQ3ODh9.xm8nF4ptw3M4F5Cy1PYklK0jd-PcAPCKx3a-AmEn"
                                },
                                "userInterface": {
                                  "type": "object",
                                  "description": "User interface object, refer to schemas for details."
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized (invalid token)",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "error"
                    },
                    "code": {
                      "type": "number",
                      "example": 401
                    },
                    "message": {
                      "type": "string",
                      "example": "Unauthorized"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    }
  }
}